{
    "name"         : "jbzoo/toolbox-dev",
    "type"         : "library",
    "description"  : "Developer toolbox only for JBZoo libs on github+travis",
    "license"      : "MIT",

    "authors"      : [
        {
            "name"  : "Denis Smetannikov",
            "email" : "admin@jbzoo.com",
            "role"  : "lead"
        }
    ],

    "require"      : {
        "php"                         : ">=7.4",

        "jbzoo/phpunit"               : "^5.0.0",
        "jbzoo/codestyle"             : "^4.0.1",
        "jbzoo/markdown"              : "^1.2.0",

        "jbzoo/jbdump"                : ">=1.5.6",
        "symfony/var-dumper"          : ">=4.4",

        "php-coveralls/php-coveralls" : ">=2.5.2",
        "fakerphp/faker"              : ">=1.19.0",

        "thomas-schulz/symfony-meta"  : ">=1.6.0"
    },

    "autoload"     : {
        "psr-4" : {
            "JBZoo\\ToolboxDev\\" : "src"
        },
        "files" : [
            "src/var-dumper.php"
        ]
    },

    "autoload-dev" : {
        "classmap" : ["tests"]
    },

    "config"       : {
        "optimize-autoloader" : true,
        "allow-plugins"       : {
            "composer/package-versions-deprecated" : true
        }
    },

    "extra"        : {
        "branch-alias" : {
            "dev-master" : "4.x-dev"
        }
    }
}
