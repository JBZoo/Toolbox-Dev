{
    "name"         : "jbzoo/toolbox-dev",
    "type"         : "library",
    "description"  : "Developer toolbox only for JBZoo libs on github+travis",
    "license"      : "MIT",

    "authors"      : [
        {
            "name"  : "Denis Smetannikov",
            "email" : "admin@jbzoo.com",
            "role"  : "lead"
        }
    ],

    "require"      : {
        "php"                         : ">=7.2",

        "jbzoo/phpunit"               : "^4.6.2",
        "jbzoo/codestyle"             : "^2.10.0",
        "jbzoo/composer-graph"        : "^1.1.1",
        "jbzoo/composer-diff"         : "^1.1.2",
        "jbzoo/jbdump"                : "^1.5.6",
        "jbzoo/toolbox-ci"            : "^1.3.5",

        "phpbench/phpbench"           : "^0.17.1",
        "symfony/var-dumper"          : "^4.4|^5.2.5",
        "php-coveralls/php-coveralls" : "^2.4.3",
        "fakerphp/faker"              : "^1.14.1"
    },

    "autoload"     : {
        "psr-4" : {
            "JBZoo\\ToolboxDev\\" : "src"
        },
        "files" : [
            "src/var-dumper.php"
        ]
    },

    "autoload-dev" : {
        "classmap" : ["tests"]
    },

    "config"       : {
        "optimize-autoloader" : true
    },

    "extra"        : {
        "branch-alias" : {
            "dev-master" : "2.x-dev"
        }
    }
}
