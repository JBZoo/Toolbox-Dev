{
    "name"         : "jbzoo/toolbox-dev",
    "type"         : "library",
    "description"  : "Developer toolbox only for JBZoo libs on github+travis",
    "license"      : "MIT",
    "keywords"     : [
        "jbzoo",
        "toolbox",
        "dev",
        "devkit",
        "dev-kit",
        "developer",
        "debug"
    ],

    "authors"      : [
        {
            "name"  : "Denis Smetannikov",
            "email" : "admin@jbzoo.com",
            "role"  : "lead"
        }
    ],

    "require"      : {
        "php"                         : "^8.1",

        "jbzoo/phpunit"               : "^5.0.0",
        "jbzoo/codestyle"             : "7.x-dev",
        "jbzoo/markdown"              : "^1.1.1",

        "jbzoo/jbdump"                : ">=1.5.6",
        "symfony/var-dumper"          : ">=4.4",

        "php-coveralls/php-coveralls" : ">=2.5.2",
        "fakerphp/faker"              : ">=1.19.0"
    },

    "autoload"     : {
        "psr-4" : {"JBZoo\\ToolboxDev\\" : "src"},
        "files" : [
            "src/var-dumper.php"
        ]
    },

    "autoload-dev" : {
        "psr-4" : {"JBZoo\\PHPUnit\\" : "tests"}
    },

    "config"       : {
        "optimize-autoloader" : true,
        "allow-plugins"       : {"composer/package-versions-deprecated" : true}
    },

    "extra"        : {
        "branch-alias" : {
            "dev-master" : "7.x-dev"
        }
    }
}
